<div class="row">
  <div class="col-xs-3">
    #ジャンル検索のsidevar入れる
  </div>
  <div class="col-xs-9">
    <h2>商品一覧（全<%= @all_items.count %>件）</h2>
    <% @items.each do |item| %>
      <div class="item-box">
        <table class="table">
          <tr>
            <th>
              <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :item_image, :fill, 100, 100, fallback: "no_image_jpg" %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th><%= link_to item.item_name, item_path(item) %></th>
          </tr>
          <tr>
            <th>¥<%= (item.non_taxed_price * 1.1).to_i %></th>
          </tr>
        </table>
      </div>
    <% end %>
    <div style="text-align: center;"><%= paginate @items %></div>
  </div>
</div>