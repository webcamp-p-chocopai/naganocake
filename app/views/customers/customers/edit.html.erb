<!-- 会員情報編集画面-->
<div>
  <div>
    <div>
      <h3>会員情報編集</h3>
    </div>
    <%= form_with model: @customer,  url: admin_customer, local: true do |f| %>
    <div>
      <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :フリガナ %>
      <%= f.text_field :kana_last_name %>
      <%= f.text_field :kana_first_name %>
    </div>
    <div>
      <%= f.label :郵便番号 %>
      <%= f.text_field :cust_postal_code %>
    </div>
    <div>
      <%= f.label :住所 %>
      <%= f.text_field :cust_address %>
    </div>
    <div>
      <%= f.label :電話番号 %>
      <%= f.text_field :phone_number %>
    </div>
    <div>
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.submit "編集内容を保存" %>
      <%= link_to "退会する", customers_check_path %>
    </div>
  </div>
</div>