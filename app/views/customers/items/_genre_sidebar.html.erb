<table class="table table-bordered genre-search-table">
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td>
        <%= link_to genre.genre_name, items_path(genre_id: genre.id), class:"genre_search_name" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>