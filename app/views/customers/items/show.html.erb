<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-xs-3">
      <!-- ジャンル検索サイドバー　-->
      <%= render 'customers/items/genre_sidebar', genres: @genres %>
    </div>
    <div class="col-xs-4">
      <!-- 商品イメージ -->
      <div class="item-image">
        <%= attachment_image_tag @item, :item_image, 300, 200, fallback: "no_image.jpg" %>
      </div>
    </div>
    <div class="col-xs-5 offset-1">
      <!-- 商品詳細 -->
      <div class="item-detail">
        <h3><strong><%= @item.item_name %></strong></h3>
        <p><%= @item.item_explanation %></p>
        <div class="item-price"><strong>¥<%= ((@item.non_taxed_price * 1.1).round).to_s(:delimited) %></strong><span>(税込)</span></div>
          <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
            <%= f.number_field :item_qty, placeholder: '個数選択', class: "quantity-select-form", min: 1 %>
            <%= f.hidden_field :id, :value => @item.id %>
            <%= f.submit "カートに入れる", class: "btn btn-outline-success" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
