<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-xs-4">
　　  <!-- ジャンル検索サイドバー　-->
      <%= render 'customers/items/genre_sidebar', genres: @genres %>
    </div>
    <div class="col-xs-7 offset-1">
    <h3 class="title"><strong>商品一覧</strong>（全<%= @items.count %>件）</h3>
    <% @items.each do |item| %>
      <div class="item-box">
        <table class="table table-borderless">
          <tr>
            <th>
              <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :item_image, :fill, 200, 150, fallback: "no_image.jpg" %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th><%= link_to item.item_name.truncate(10), item_path(item) %></th>
          </tr>
          <tr>
            <th>¥<%= ((item.non_taxed_price * 1.1).round).to_s(:delimited) %></th>
          </tr>
        </table>
      </div>
    <% end %>
    <div style="text-align: center;"><%= paginate @items %></div>
  </div>
  </div>
</div>