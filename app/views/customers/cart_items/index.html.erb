<div class="container">
	<div class="row">
		<%#= image_tag 'no_image.jpg', :size =>'520x170' %>
		<div class="text-right">
			<%= link_to  "カートを空にする",cart_items_all_destroy_path ,method: :delete, class: "btn btn-danger" %>
		</div><br>
		<div class="blank-messege">
		<%= flash[:blank] %>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @unit_price = 0 %>
				<% @add_price = 0 %>
				<% @subtotal = 0 %>
					<% @cart_items.each do |cart_items| %>
						<%= form_for [cart_items],url: cart_item_path(cart_items),method: :patch do |f| %>

						<tr>
							<!-- 商品名 -->
							<td><%= cart_items.item.item_name %></td>
							<!-- 単価(税込) -->
							<% @non_taxed_price = (cart_items.item.non_taxed_price * 1.1).floor%>
							<td><%= @non_taxed_price.to_s(:delimited)%>円</td>
							<!-- 数量 -->
							<td><%= f.number_field :item_qty,in: 1..100, step: 1 %>
							<%= f.submit "変更", class: "btn btn-primary",data: {:turbolinks => "false"} %></td>
							<!-- 小計 -->
							<% @subtotal = (@non_taxed_price * cart_items.item_qty).floor %>
							<td><%= @subtotal.to_s(:delimited) %>円</td>
							<% @add_price = @add_price + @subtotal %>
							<!-- 削除ボタン -->
							<td><%= link_to "削除する", cart_item_path(cart_items), method: :delete, class: "btn btn-danger" %></td>
						</tr>
					<% end %>
				<% end %>
				<tr>
					<td><%= link_to "買い物を続ける",items_path, class: "btn btn-primary" %></td>
					<!-- 合計金額 -->
					<td></td>
					<td></td>
					<td>合計金額</td>
					<td><%= @add_price.to_s(:delimited) %>円</td>
				</tr>
				<tr>
			</tbody>
		</table>
		</div>
	</div>
	<div class="row">
			<div class="text-center">
			<%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success btn-lg active" %>
		</div><br>
	</div>
</div>
