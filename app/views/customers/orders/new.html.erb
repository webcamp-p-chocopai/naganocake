<!-- ブートストラップは後から記述します-->
<!-- 注文情報入力画面-->
<div>
  <div>
    <div>
      <h2>注文情報入力</h2>
      <%= form_with model: @orders, orders_check_path, method: :post, local: true do |f| %>
        <h4><strong>支払い方法</strong></h4>
        <div>
          <!--ラジオボタン実装-->
          <label><%= f.radio_button :method_of_payment, "クレジットカード支払い", checked: true %>クレジットカード</label><br>
          <label><%= f.radio_button :method_of_payment, "銀行振込" %>銀行振込</label>
        </div>
        <h4><strong>お届け先</strong></h4>
        <div>
          <!--ご自身の住所-->
          <label><%= f.radio_button :address, "1", checked: true %>ご自身の住所</label><br>
          〒<%= current_customer.postal_code%><%= current_customer.address %><br>
          <%= current_customer.dear_name %><br>
        </div>
        <div>
          <!--登録済み住所から選択-->
          <label><%= f.radio_button :address, "2" %>登録済み住所から選択</label><br>
          <%= f.collection_select(:address, current_customer.addresses.all, :id, :address_all, selected: 1) %><br>
        </div>
        <div>
          <!-- 新しいお届け先を設定-->
          <label><%= f.radio_button :address, "3 %>新しいお届け先</label><br>
          <table>
            <tr>
              <th>
                <%= f.label :"郵便番号(ハイフンなし)" %>
              </th>
              <td>
                <%= f.text_field :postal_code %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :"住所" %>
              </th>
              <td>
              <%= f.text_field :address %>
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :"宛名" %>
              </th>
              <td>
                <%= f.text_field :dear_name %>
              </td>
            </tr>
          </table>
          <div>
            <%= f.submit "確認画面へ進む" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

