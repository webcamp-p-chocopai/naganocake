<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4>配送先編集</h4>
      <table class="table">
        <%= form_with model: @address, url: address_path, local: true, method: :PATCH do |f| %>
        <tr>
          <td><%= f.label :郵便番号 %><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :住所 %><%= f.text_field :address %></td>
        <tr>
          <td><%= f.label :宛名 %><%= f.text_field :dear_name %></td>
        <tr>
          <td>
	          <%= f.submit "変更を保存する" %>
	        </td>
	      </td>
        <% end %>
      </table>
    </div>
  </div>
</div>