<div class="mx-auto container">
  <div class="form-group form-inline row">
    <div class="col-md-10">
      <h4>配送先編集</h4>
        <%= form_with model: @address, url: address_path, local: true, method: :PATCH do |f| %>
        <table class="table table-borderless">
        　<tr>
            <td><%= f.label :郵便番号 %></td>
            <td><%= f.text_field :postal_code, class: "col-auto form-control form-control-sm w-200" %></td>
          </tr>
          <tr>
            <td><%= f.label :住所 %></td>
            <td><%= f.text_field :address, class: "col-auto form-control form-control-sm w-100" %></td>
          <tr>
            <td><%= f.label :宛名 %></td>
            <td><%= f.text_field :dear_name, class: "col-auto form-control form-control-sm w-200" %></td>
            <td><%= f.submit "変更を保存する", class: "btn btn-sm btn-success address_path" %></td>
        </table>
      <% end %>
    </div>
  </div>
</div>