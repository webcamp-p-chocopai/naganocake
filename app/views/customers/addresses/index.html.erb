<div class='container'>
  <h2>配送先登録/一覧</h2>
  <div class='row'>
    <%= form_with model: @address, url: addresses_path, local: true, method: :POST do |f| %>
      <div class='col-md-10'>
        <table>
          <tr>
            <td><%= f.label :"郵便番号(ハイフンナシ)" %></td>
            <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address, placeholder:"東京区渋谷区代々木区神園町0-0" %></td>
          </tr>
          <tr>
            <td><%= f.label :"宛名" %></td>
            <td><%= f.text_field :dear_name, placeholder:"令和道子" %></td>
          </tr>
        </table>
      </div>
    </div>
    <%= f.submit '新規登録' %>
    <% end %>
    <div class='row'>
      <div class='col-md-8'>
        <table class='table'>
          <thead>
            <tr>
              <td>郵便番号</td>
              <td>住所</td>
              <td>宛名</td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.dear_name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success edit_address_path_#{address.id}" %>
                <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-sm btn-danger destroy_address_#{address.id}"%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>