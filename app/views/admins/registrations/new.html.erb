<%= render "devise/shared/error_messages", resource: resource %>
  <div class="mx-auto container">
    <div class="form-group form-inline row">
      <div class="col-md-10 mt-5">
        <h2>新規登録(管理者)</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <table class='table table-borderless'>
          <tr>
            <td><%= f.label :メールアドレス, class: "float-left" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-auto form-control form-control-md w-100" %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード６文字以上, class: "float-left" %></td>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
            <td><%= f.password_field :password, autocomplete: "new-password", class: "col-auto form-control form-control-md w-100" %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード（確認用）, class: "float-left" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-auto form-control form-control-md w-100" %></td>
          </tr>

          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-primary col-md-12" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>