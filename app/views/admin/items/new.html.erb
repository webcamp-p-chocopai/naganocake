<div class="container mt-5">
 <h2 class="p-3 mb-2 bg-secondary text-white w-25 text-center">商品新規登録</h2>
</div>
      
      <div class="container", style="margin-left: 30rem;">
        <div class="col-md-6">
    
       <%= form_with model:@item,url:admin_items_path, local:true do |f| %>
     
        <div class="new-field">
         <h5><%= f.label :商品画像 ,class: "col-xs-3" %>
         <%= f.attachment_field :item_image, autofocus: true, autocomplete: "item_image" ,class: "col-xs-8"%></h5>
        </div>
      
        <div class="new-field">
         <h5><%= f.label :商品名 ,class: "col-xs-3" %>
         <%= f.text_field :item_name, autofocus: true, autocomplete: "item_name" ,class: "col-xs-8"%></h5>
        </div>
     
        <div class="new-field">
         <h5><%= f.label :商品説明 ,class: "col-xs-3" %>
         <%= f.text_area :item_explanation, autofocus: true, autocomplete: "explanation" ,class: "col-xs-8"%></h5>
        </div>
        
        <div class="new-field">
         <h5><%= f.label :ジャンル ,class: "col-xs-3 fix" %>
         <%= f.collection_select(:genre_id, @genres, :id, :genre_name,:prompt => "選択してください") %></h5>
        </div>
       
        <div class="new-field">
         <h5><%= f.label :税抜価格 ,class: "col-xs-3 block"  %>
         <%= f.text_field :non_taxed_price, autofocus: true, autocomplete: "non_taxed_price" ,class: "col-xs-8"%></h5>
        </div>
        
        <div class="new-field">
         <h5><%= f.label :販売ステータス  ,class: "col-xs-3 fix" %>
          <%= f.radio_button :sale_status, :true %>販売中
          <%= f.radio_button :sale_status, :false %>販売停止中
         </h5>
        </div>
        
        </div>
     </div>
   
        <div class="text-center"> 
         <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
        
      <% end %>