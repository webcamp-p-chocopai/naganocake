<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.item_name,admin_item_path(item) %></td>
            <td><%= item.non_taxed_price %></td>
            <td><%= item.genre.genre_name %></td>
            <td><% if item.sale_status? %>
                 販売中
                <% else %>
                 販売停止中
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>