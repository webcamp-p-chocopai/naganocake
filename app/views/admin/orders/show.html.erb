<div class="row">
  <h2>注文履歴詳細</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>購入者</th>
        <th>
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name%>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>注文日</th>
        <th><%= order.created_at.strftime("%Y/%m/%d") %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th><%= @order.address %></th>
      </tr>
      <tr>
        <th>支払方法</th>
        <th>
          <%= @order.postal_code %><%= @order.address %></br>
          <%= @order.dear_name %>
        </th>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <th>
          <%= form_with model: @order, url: admin_order, method: :patch, local: :true do |f| %>
            <%= f.select :orderd_status, ["入金待ち"] #ここに何メソッドを書くか %>
            <%= f.submit "更新", class: "btn btn-primary" %>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-xs-8">
    <table class="table table-bordered">
      <thead>
        <tr class="table-head" style="background-color:#gray" >
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.item_name %></td>
            <td><%= order_item.item.item_price %></td>
            <td><%= order_item.purchase_quantity %></td>
            <td><%= order_item.item.item_price * order_item.purchase_quantity %></td>
            <td>
              <%= form_with model: order_item, url: admin_order_order_item, method: :patch, local: true do |f| %>
                <% f.select :production_status, OrderItem.production_status. #ここに何メソッドを書くか %>
                <%= f.submit "更新", class: "btn btn-primary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-4">
    <table class="table">
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%= #taxed_purchase_price %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.freight %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= #taxed_purchase_price %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>