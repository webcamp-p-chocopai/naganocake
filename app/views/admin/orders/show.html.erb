<div class="row">
  <h2>注文履歴詳細</h2>
  <table class="table">
    <tbody>
      <tr>
        <th>購入者</th>
        <th>
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %>
            <%= @order.customer.first_name%>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>注文日</th>
        <th><%= order.created_at.strftime("%Y/%m/%d") %></th>
      </tr>
      <tr>
        <th>配送先</th>
        <th><%= @order.address %></th>
      </tr>
      <tr>
        <th>支払方法</th>
        <th>
          <%= @order.postal_code %><%= @order.address %></br>
          <%= @order.dear_name %>
        </th>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <th>
          <%= form_with model: @order, url: admin_order_orderd_status, method: :patch, local: :true do |f| %>
          
        </th>
      </tr>
    </tbody>
  </table>
</div>