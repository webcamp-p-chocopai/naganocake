<div class="container px-2">
  <div class="row mt-4 mb-3">
    <div class="col-md-3">
      <h4 class="title-order">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
     <div class="col-md-12">
       <table class="table table-bordered" >
        <thead>
          <tr class="table-thead" style="background-color: #CCCCCC;" >
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class:"text-secondary" %></td>
            <td>
              <%= order.customer.last_name %>
              <%= order.customer.first_name %>
            </td>
            <td>
              <!--注文個数-->
              <% @sum = 0 %>
                <% order.order_items.each do |order_item| %>
                 <% @purchase_quantity = order_item.purchase_quantity %>
                 <% @sum += @purchase_quantity %>
                <% end %>
              <%= @sum %>
            </td>
            <td><%= order.orderd_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-6 offset-3 text-center"><%= paginate @orders %>
    </div>
  </div>
</div>
