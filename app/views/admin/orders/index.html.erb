<div class="container-fluid">
  <div class="row mt-5 mb-5">
    <div class="col-md-5 col-offset-3">
      <h4 class="title-order">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
     <div class="col-md-10 col-md-offset-1">
       <table class="table table-bordered" style="margin-top: 50px;" >
        <thead>
          <tr class="table-thead" style="background-color: #CCCCCC;" >
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%# @orders.each do |order| %>
          <tr>
            <td><%#= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
            <td><%#= order.customer.last_name + order.customer.first_name %></td>
            <td><%#= order.order_items.purchase_quantity %></td>
            <td><%#= order.orderd_status %></td>
          </tr>
          <%# end %>
          <%#= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>