<!-- ジャンル編集画面-->
<div class="container">
  <div class="row mx-3 my-4">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="row">
    <div class="col-10 my-3">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      　<%= f.label :ジャンル %>
      　<%= f.text_field :genre_name, placeholder: "ジャンル名", class: "mx-4" %>
      　<%= f.submit "新規登録", class: "btn btn-success col-3" %>
      <% end %>
    </div>
    <div class="col-6 mb-3">
      <table class="table table-hover">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre|%>
        <tr>
          <td>
            <%= genre.genre_name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "col-8 btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


