<!-- ジャンル編集画面-->
<div class="container">
  <div class="row mt-3">
    <h4 class="p-3 mb-2 w-50 text-center" style="color: #494949; background: #80aba9; border-left: solid 5px #2f4f4f;">ジャンル一覧・追加</h4>
  </div>
  <div class="row">
    <div class="col-10 my-3">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= f.label :ジャンル %>
        <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "mx-4" %>
        <%= f.submit "新規登録", class: "btn btn-outline-success col-2" %>
      <% end %>
    </div>
    <div class="col-6 mb-3">
      <table class="table table-hover">
        <tr class="" style="text-align: center; background-color: #bed3ca;">
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre|%>
        <tr>
          <td>
            <%= genre.genre_name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-success" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


