<!-- ジャンル編集画面-->
<div class="container">
  <div class=" my-3 row">
    <h3 class="mt-3 text-center col-5">ジャンル編集</h3>
  </div>
  <div class="col-9">
    <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch, local: true do |f| %>
    <div class="my-5">
      <b><%= f.label :ジャンル名 %></b>
      <%= f.text_field :genre_name, class: "mx-5" %>
      <%= f.submit "変更を保存", class: "btn btn-success col-3" %>
    </div>
    <% end %>
  </div>
</div>

